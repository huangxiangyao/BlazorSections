<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <AssemblyName>BlazorSectionLib</AssemblyName>
    <RootNamespace>BlazorSectionLib</RootNamespace>
    <Authors>InspGadget</Authors>
    <Product>BlazorSections</Product>
    <Company />
    <Description>A Blazor component for adding sections similar to ASP.NET Core MVC sections.</Description>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <Copyright>InspGadget</Copyright>
    <PackageTags>ASP.NET Core .NET Razor Blazor Component Sections</PackageTags>
    <PackageProjectUrl>https://github.com/inspgadget/BlazorSections</PackageProjectUrl>
    <RepositoryUrl>https://github.com/inspgadget/BlazorSections</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageId>BlazorSections</PackageId>
    <AssemblyVersion>1.0.2.0</AssemblyVersion>
    <FileVersion>1.0.2.0</FileVersion>
    <PackageVersion>$(AssemblyVersion)</PackageVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.0" />
  </ItemGroup>

</Project>
